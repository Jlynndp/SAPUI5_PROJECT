<mvc:View controllerName="logaligroup.sapui5app.controller.Menu" displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Bar id="Bar1" design="Header">
        <contentMiddle >
            <Text id="Text1" text="{i18n>menuTitle}" />
        </contentMiddle>
    </Bar>

    <Panel id="Pnl_Empleados" headerText="{i18n>empleados}" expandable="true" expanded="true" class="sapUiResponsiveMargin" width="auto">
        <GenericTile id="GT_CrearEmpleado" press="onPressCrearEmpleado" headerImage="sap-icon://add-employee" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
            <TileContent id="TC_CrearEmpleado" footer="{i18n>crearEmpleado}"/>
        </GenericTile>
        <GenericTile id="GT_VerEmpleado" press="onPressVerEmpleado" headerImage="sap-icon://employee-lookup" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
            <TileContent id="TC_VerEmpleado" footer="{i18n>verEmpleado}"/>
        </GenericTile>
    </Panel>

    <Panel id="Pnl_Pedidos" headerText="{i18n>pedidos}" expandable="true" expanded="true" class="sapUiResponsiveMargin" width="auto">
        <GenericTile id="GT_FirmarPedido" press="onPressFirmarPedido" headerImage="sap-icon://signature" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
            <TileContent id="TC_FirmarPedido" footer="{i18n>firmarPedido}"/>
        </GenericTile>
    </Panel>

</mvc:View>