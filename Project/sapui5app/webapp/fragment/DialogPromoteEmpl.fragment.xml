<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">
    <Dialog id="_IDGenDialog1" title="{i18n>titleNewPromotion}" type="Standard" >
        <content>
            <form:SimpleForm id="_IDGenSimpleForm1" editable="true">

                <Label id="_IDGenLabel2" text="{i18n>salary}" required="true" labelFor="I_Salary"/>
                <Input id="I_Salary" value="{Salary>/Amount}" required="true" />

                <Label id="_IDGenLabel1" text="{i18n>date}" required="true" labelFor="I_Date"/>
                <!-- <DatePicker id="I_Date" value="{Salary>/CreationDate}" required="true" /> -->
                <DatePicker id="DP4" value="{path:'Salary>/CreationDate', 
                                             type:'sap.ui.model.type.Date', 
                                             formatOptions: { style: 'medium', strictParsing: true}}" class="sapUiSmallMarginBottom" required="true"/>

                <Label id="_IDGenLabel3" text="{i18n>comments}" required="true" labelFor="I_Comments"/>
                <TextArea id="I_Comments" height="100px" value="{Salary>/Comments}" required="true"/>
            </form:SimpleForm>
        </content>

        <buttons>
            <Button id="_IDGenButton1" text="{i18n>btnAccept}" press="onSavePromotion"/>
            <Button id="_IDGenButton2" text="{i18n>btnCancel}" press="onCancelPromotion" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>